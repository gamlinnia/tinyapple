<?xml version="1.0"?>

<layout version="0.1.0">
    <service_index_index>
        <reference name="head">

            <action method="addItem">
                <type>skin_js</type><script>tinyapple/js/clicker_box.js</script>
            </action>
            <action method="addItem">
                <type>skin_js</type><script>tinyapple/slick/slick.js</script>
            </action>
            <action method="addItem">
                <type>skin_js</type><script>tinyapple/js/scrollToTop.js</script>
            </action>
            <action method="removeItem"><type>skin_css</type><name>css/styles.css</name></action>
            <action method="addCss">
                <stylesheet>tinyapple/css/normalize.css</stylesheet>
            </action>
            <action method="addCss">
                <stylesheet>tinyapple/css/menu.css</stylesheet>
            </action>
            <action method="addCss">
                <stylesheet>tinyapple/css/index.css</stylesheet>
            </action>
            <action method="addCss">
                <stylesheet>tinyapple/slick/slick.css</stylesheet>
            </action>
            <action method="addCss">
                <stylesheet>tinyapple/slick/slick-theme.css</stylesheet>
            </action>

        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/empty.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="homepage/html_header" name="custom_header"></block>
            <block type="service/content" name="service_content" template="li_service/content.phtml"/>
            <block type="homepage/html_footer" name="custom_footer"></block>
        </reference>
    </service_index_index>
</layout>